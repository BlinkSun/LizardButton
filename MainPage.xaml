<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="LizardButton.MainPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:LizardButton.ViewModels"
             x:DataType="viewModel:BaseViewModel">
    <Grid x:Name="RootGrid">
        <AbsoluteLayout x:Name="AnimationArea"
                        Grid.Row="0"
                        Grid.Column="0"
                        BackgroundColor="Transparent" />
        <Button BackgroundColor="MediumPurple"
                Clicked="OnCentralButtonClicked"
                CornerRadius="60"
                FontSize="24"
                HeightRequest="120"
                HorizontalOptions="Center"
                Text="TAP ME"
                TextColor="White"
                VerticalOptions="Center"
                WidthRequest="120" />
    </Grid>
</ContentPage>
